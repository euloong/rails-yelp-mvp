<h2>
  <%= @restaurant.name %>
</h2>
<p>
  <%= @restaurant.address %>
</p>
<p>
  <%= @restaurant.phone_number %>
</p>
<p>
  <%= @restaurant.category %>
  <% @restaurant.reviews.each do | review | %>
  <li>
    Review description:
    <%= review.content %>
    Rating:
    <%= review.rating %> out of 5
  </li>
  <% end %>
</p>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back to all restaurants', restaurants_path %>
